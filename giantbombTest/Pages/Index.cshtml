@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <a asp-page="./AddSearch">Add Game</a>
</div>

    <table class="table">
           <thead>
               <tr>
                   <th>
                       Thumbnail
                   </th>
                   <th>
                       <a asp-page="./Index" asp-route-id="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Games[0].Game.Name)</a>
</th>
                   <th>
                       <a asp-page="./Index" asp-route-id="@ViewData["ReleaseSortParm"]">@Html.DisplayNameFor(model => model.Games[0].Game.OriginalReleaseDate.Value.Year)</a>
</th>
                   <th>
                       <a asp-page="./Index" asp-route-id="@ViewData["PlatformSortParm"]">@Html.DisplayNameFor(model => model.Games[0].GameItem.Platform)</a>
</th>
                   <th>
                       <a asp-page="./Index" asp-route-id="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Games[0].GameItem.DateAdded)</a>
</th>
               </tr>
           </thead>
           @if (Model.Games != null)
           {
               <tbody>
                   @foreach (var i in Model.Games)
                   {
                   <tr>
                       <td>
                           <img src=@i.Game.Image.ThumbUrl>
                       </td>
                       <td>
                           <a asp-page="./ViewGame" asp-route-id="@i.GameItem.ID">
                               @Html.DisplayFor(m => i.Game.Name)
                           </a>
                       </td>
                       <td>
                           @Html.DisplayFor(m => i.Game.ExpectedReleaseYear)
                       </td>
                       <td>
                           @Html.DisplayFor(m => i.GameItem.Platform)
                       </td>
                       <td>
                           @i.GameItem.DateAdded.ToShortDateString()
                       </td>
                   </tr>
                   }
               </tbody>
           }
       </table>

